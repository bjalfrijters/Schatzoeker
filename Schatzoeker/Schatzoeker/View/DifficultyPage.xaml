<Page
    x:Class="Schatzoeker.DifficultyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Schatzoeker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ListView HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock TextWrapping="Wrap" Text="Select the Difficulty" FontSize="25" />
        <CheckBox Content="Full map with routes" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="CheckBox_Checked"/>
        <CheckBox Content="Full map without routes" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="CheckBox_Checked_1"/>
        <Button Name="Start" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" />

    </ListView>
</Page>
